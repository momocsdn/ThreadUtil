<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_backforetask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BackForeTask" />

    <Button
        android:id="@+id/btn_forebacktask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ForeBackTask" />

    <Button
        android:id="@+id/btn_backtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BackTask" />

    <Button
        android:id="@+id/btn_foretask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ForeTask" />
</LinearLayout>
